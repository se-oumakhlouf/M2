<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="fr-printer" class="fr.uge.jee.printers.FrenchMessagePrinter"/>
    <bean id="en-printer" class="fr.uge.jee.printers.SimpleMessagePrinter"/>
    <bean id="cu-printer" class="fr.uge.jee.printers.CustomizableMessagePrinter">
        <constructor-arg value="Hello from the config.xml"/>
    </bean>
    <bean id="count-printer" class="fr.uge.jee.printers.CountMessagePrinter" scope="prototype"/>
    <bean id="slow-printer" class="fr.uge.jee.printers.SlowConstructionMessagePrinter" lazy-init="true"/>

</beans>